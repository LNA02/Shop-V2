<div class="row" style="margin: 20px;">
    {{#each product}}
        <div class="col col-lg-3" style="margin-bottom: 20px;" >
            <a href="/product/infoProduct/{{this._id}}" style="text-decoration: none;">
            <div class="card" style="width: 18rem;">
                <img class="card-img-top" src="{{this.image}}" alt="Card image cap" style="height: 250px;">
                <div class="card-body">
                    <h5 class="card-title">{{this.name}}</h5>
                    <p class="card-text">{{this.price}} USD</p>
                    <a href="#" class="btn btn-primary">Add to Cart</a>
                </div>
            </div>
            </a>          
        </div>
    {{/each}}
</div>
            